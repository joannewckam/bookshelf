<%- include('../partials/header') %>

<h3>Book Detail</h3>
<form
	id="delete-form"
	method="POST"
	action="/books/<%=book.id%>/?_method=DELETE"
>
	<button type="submit">Delete book</button>
	<a href="/books/update/<%=book.id %>"><button>EDIT</button></a>
</form>
<p><img src="<%= book.bookCover%>" /></p>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
		</tr>
	</thead>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.author %></td>
	</tr>
	<thead>
		<th>Rating</th>
		<th>Reviews</th>
	</thead>
	<tr>
		<td><%= book.rating %></td>
		<% book.reviews.forEach(function(r){ %>
		<td><%= r.review %></td>
		<% }) %>
	</tr>
</table>

<h4>Write a review</h4>
<form id="add-review-form" method="POST" action="/books/<%=book.id%>/reviews">
	<input type="text" name="review" />
	<input type="submit" value="Add Review" />
</form>

<%- include('../partials/footer') %>
