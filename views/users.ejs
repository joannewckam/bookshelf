<%- include('./partials/header') %>
<!-- FAVOURITES SHELF -->
<h4>Hi, <%=user.name%>! </h4>
				
<!-- ALL BOOKS -->
<section class="container">
	<div class="row">
		<div class="col s12">
			<div class="card grey amber-lighen-3">
				<div class="card-content white-text">
					<span class="card-title">Top Rated </span>
					<p>
						<% if (book) { %> 
						<h4><%=book.title%> </h4>
						<p><img src="<%= book.bookCover%>" /></p>
						<table>
							<thead>
								<tr>
									<th>Title</th>
									<th>Author</th>
									<th>Rating</th>
								</tr>
							</thead>
							<tr>
								<td><%= book.title %></td>
								<td><%= book.author %></td>
								<td><%= book.rating %></td>
							</tr>
						</table>
					</p>
				</div>
				<div class="card-action">
					<a href="/books/<%=book.id%>">Details</a>
					<% } else { %> 
						No Books yet
					<% } %> 
				</div>
			</div>
		</div>
	</div>
<%- include('./partials/footer') %>
